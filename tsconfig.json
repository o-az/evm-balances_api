{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2018",
    "module": "CommonJS",
    "lib": [
      "ES2018",
      "DOM"
    ],
    "moduleResolution": "Node",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
  },
  "files": [
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "tasks/**/*",
    "test/**/*"
  ]
}